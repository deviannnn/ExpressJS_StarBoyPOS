                                <option value="22.5">22.5W</option>
                                <option value="25">25W</option>
                                <option value="30">30W</option>
                                <option value="60">60W</option>
                                <option value="65">65W</option>
                                <option value="100">100W</option>
                                <option value="140">140W</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-6 col-sm-3">
                        <label for="port">Charging Port</label>
                        <div class="choices" data-type="select-one">
                            <select class="form-control" id="port" name="port">
                                <option value="1">Lightning</option>
                                <option value="2">Type C</option>
                                <option value="3">MagSafe</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
