<div class="row">
    <div class="col-lg-6">
        <h4>About Product</h4>
        <p>Mandatory informations</p>
    </div>
    <div class="col-lg-6 text-right d-flex flex-column justify-content-center">
        {{#unless product}}
        <button class="btn bg-gradient-dark ms-auto mb-0" type="button" id="next-product">Next</button>
        <div class="modal fade" id="next-Modal" tabindex="-1" role="dialog" aria-labelledby="modal-default"
            aria-hidden="true">
            <div class="modal-dialog modal- modal-dialog-centered modal-" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h6 class="modal-title" id="modal-title-default"><b>Verify Account Creation</b>
                        </h6>
                        <button type="button" class="btn-close text-dark" data-bs-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">×</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <p>After you verify this message, the system will create a new product.
                            You can then add or edit the variants of this one.</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn bg-gradient-success" data-bs-dismiss="modal"
                            id="confirm-product">Confirm</button>
                        <button type="button" class="btn bg-gradient-secondary ml-auto"
                            data-bs-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
        {{/unless}}
    </div>
</div>
<div class="row mt-4">
    <div class="col-12 mt-lg-0 mt-4">
        <div class="card">
            <div class="card-header pb-0 px-3">
                <div class="row">
                    <div class="col-6">
                        <h5 class="font-weight-bolder mb-0">Product Information</h5>
                    </div>
                    {{#if product}}
                    <div class="col-6 ms-auto my-auto mt-lg-0 mt-4 text-end">
                        <a href="" class="btn bg-gradient-dark btn-sm mb-0" data-bs-toggle="modal"
                            data-bs-target="#addVarModal">Update Info</a>
                    </div>
                    {{/if}}
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-lg-6">
                        {{#if product}}
                        <input id="productId" hidden value="{{product.id}}">
                        {{/if}}

                        <label for="name">Name</label>
                        <input {{#if product}} value="{{product.name}}" {{/if}} class="form-control" type="text"
                            id="name" placeholder="eg. iPhone 15, iPhone 15 Plus, iPhone 15 Pro,...">
                    </div>
                    <div class="col-lg-6 mt-lg-0 mt-4">
                        <label for="category">Category</label>
                        {{#if categories.length}}
                        <div class="choices" data-type="select-one">
                            <select class="form-control" id="category">
                                {{#each categories}}
                                <option {{#if (eq ../product.category id)}}selected{{/if}} value="{{id}}">
                                    {{name}}
                                </option>
                                {{/each}}
                            </select>
                        </div>
                        {{/if}}
                    </div>
                </div>
                <div class="row">
                    {{#if product}}
                        {{#each categories}}
                            {{#if (eq ../product.category id)}}
                                {{#each specs}}
                                    {{#each ../../product.specs}}
                                        {{#if (eq name ../name)}}
                                            <div class="col-lg-3 mt-4">
                                                <label for="{{name}}">{{name}}</label>
                                                <div class="choices" data-type="select-one">
                                                    <select id="{{name}}" class="form-control specs">
                                                        {{#each ../options}}
                                                        <option {{#if (eq this ../option)}} selected {{/if}} value="{{.}}">{{.}}</option>
                                                        {{/each}}
                                                    </select>
                                                </div>
                                            </div>                                            
                                        {{/if}}
                                    {{/each}}
                                {{/each}}
                            {{/if}}
                        {{/each}}
                    {{else}}
                        {{#if categories.length}}
                            {{#each categories.[0].specs}}
                            <div class="col-lg-3 mt-4">
                                <label for="{{name}}">{{name}}</label>
                                <div class="choices" data-type="select-one">
                                    <select id="{{name}}" class="form-control specs">
                                        {{#each options}}
                                        <option value="{{.}}">{{.}}</option>
                                        {{/each}}
                                    </select>
                                </div>
                            </div>
                            {{/each}}
                        {{/if}}
                    {{/if}}
                </div>
            </div>
        </div>
    </div>
</div>

{{#if product}}
<div class="row mt-4">
    <div class="col-sm-12 mt-sm-0 mt-4">
        <div class="card">
            <div class="card-header pb-0 px-3">
                <div class="row">
                    <div class="col-6">
                        <h5 class="font-weight-bolder mb-0">Product Variations</h5>
                    </div>
                    <div class="col-6 ms-auto my-auto mt-lg-0 mt-4 text-end">
                        <a href="" class="btn bg-gradient-warning btn-sm mb-0" data-bs-toggle="modal"
                            data-bs-target="#addVarModal">+&nbsp;Variant</a>
                    </div>
                </div>
            </div>
            <div class="card-body pt-4 p-3">
                <ul class="list-group">
                    {{#if variants}}
                    {{#each variants}}
                    <li class="list-group-item border-0 d-flex p-4 mb-2 bg-gray-100 border-radius-lg">
                        <div class="row w-80">
                            <div class="col-5 col-lg-2">
                                <img class="h-lg-100 w-100" src="/uploads/{{img}}">
                            </div>
                            <div class="col-7 col-lg-10 d-flex flex-column">
                                <h6 class="mb-3 text-sm">{{barcode}}</h6>
                                <div class="row">
                                    <span class="col-lg-6 mb-2 text-xs">Color:
                                        <span class="text-dark font-weight-bold ms-sm-2">{{color}}</span>
                                    </span>
                                    <span class="col-lg-6 mb-2 text-xs">Quantity:&nbsp;
                                        <span class="text-dark font-weight-bold ms-sm-2">{{quantity}}</span>
                                    </span>
                                    <span class="col-lg-6 mb-2 text-xs">Cost:&nbsp;
                                        <span class="text-dark font-weight-bold ms-sm-2">{{cost}} VND</span>
                                    </span>
                                    <span class="col-lg-6 mb-2 text-xs">Warn:&nbsp;&nbsp;&nbsp;&nbsp;
                                        <span class="text-dark font-weight-bold ms-sm-2">{{warn}}</span>
                                    </span>
                                    <span class="col-lg-6 mb-2 text-xs">Price:
                                        <span class="text-dark font-weight-bold ms-sm-2">{{price}} VND</span>
                                    </span>
                                    <span class="col-lg-6 mb-2 text-xs">Actived:&nbsp;
                                        <span class="text-dark font-weight-bold ms-sm-2">{{actived}}</span>
                                    </span>
                                </div>
                            </div>
                        </div>
                        <div class="ms-auto text-end">
                            <a class="btn btn-link text-dark px-3 mb-0" href="">
                                <i class="fas fa-pencil-alt text-dark me-2" aria-hidden="true"></i>
                                Edit
                            </a>
                            <a class="btn btn-link text-primary text-gradient px-3 mb-0" href="">
                                <i class="fas fa-truck-moving text-primary me-2" aria-hidden="true"></i>
                                Imp
                            </a>
                        </div>
                        <div class="ms-auto text-end">
                            <a class="btn btn-link text-danger text-gradient px-3 mb-0" href="">
                                <i class="far fa-trash-alt me-2" aria-hidden="true"></i>
                                Delete
                            </a>
                            {{#if (eq actived true)}}
                            <a class="btn btn-link text-secondary px-3 mb-0" href="">
                                <i class="fas fa-ban text-secondary me-2" aria-hidden="true"></i>
                                Unact
                            </a>
                            {{else}}
                            <a class="btn btn-link text-success px-3 mb-0" href="">
                                <i class="far fa-circle text-success me-2" aria-hidden="true"></i>
                                Active
                            </a>
                            {{/if}}
                        </div>
                    </li>
                    {{/each}}
                    {{else}}
                    <div class="alert alert-light m-0" role="alert">
                        <strong>Ooops!</strong> There aren't any product variants yet!
                    </div>
                    {{/if}}
                </ul>
            </div>
        </div>
    </div>
</div>

<!-- Modal Add Var -->
<div class="modal fade" id="addVarModal" tabindex="-1" role="dialog" style="--bs-modal-width: 850px;">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-bolder">New Product Variant</h5>
                <button type="button" class="btn-close text-dark" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body mt-3 mb-1">
                <div class="row">
                    <div class="col-lg-4 text-center">
                        <h6>Variant Image</h6>
                        <img id="preview" class="w-80" alt="product_image" src="/assets/img/iphone15-pro.png"
                            style="height: 163px;">
                        <input class="form-control" type="text" id="img" hidden disabled>
                        <div class="d-flex ms-4 mt-4">
                            <button class="btn bg-gradient-primary btn-sm mb-0 me-2" type="button"
                                id="edit-img-btn">Edit</button>
                            <button class="btn btn-outline-dark btn-sm mb-0" type="button"
                                id="remove-img-btn">Remove</button>
                        </div>
                    </div>
                    <div class="col-lg-8 mt-lg-0 mt-4">
                        <h6 class="text-center">Variant Information</h6>
                        <div class="row">
                            <div class="col-12 mt-0">
                                <label for="barcode">Barcode (auto or custom)</label>
                                <input class="form-control" type="text" id="barcode" maxlength="20">
                            </div>
                            <div class="col-lg-6 mt-2">
                                <label for="title">Color</label>
                                <input class="form-control" type="text" id="title" placeholder="eg. Black, White,..."
                                    maxlength="15">
                            </div>
                            <div class="col-lg-6 mt-2">
                                <label for="author">Warn</label>
                                <input class="form-control" type="text" id="author" placeholder="eg. 3, 4, 5,..."
                                    maxlength="2">
                            </div>
                            <div class="col-lg-6 mt-2">
                                <label for="price">Cost</label>
                                <div class="d-flex">
                                    <span class="input-group-text"
                                        style="border-top-right-radius: 0; border-bottom-right-radius: 0">VND</span>
                                    <input class="form-control" type="text" id="price" placeholder="eg. 10 ≡ 10000 VND"
                                        style="border-radius: 0; border-right: 0; border-left: 0; z-index: 1; text-align: end">
                                    <span class="input-group-text"
                                        style="border-top-left-radius: 0; border-bottom-left-radius: 0">.000</span>
                                </div>
                            </div>
                            <div class="col-lg-6 mt-2">
                                <label for="price">Price</label>
                                <div class="d-flex">
                                    <span class="input-group-text"
                                        style="border-top-right-radius: 0; border-bottom-right-radius: 0">VND</span>
                                    <input class="form-control" type="text" id="price" placeholder="eg. 10 ≡ 10000 VND"
                                        style="border-radius: 0; border-right: 0; border-left: 0; z-index: 1; text-align: end">
                                    <span class="input-group-text"
                                        style="border-top-left-radius: 0; border-bottom-left-radius: 0">.000</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn bg-gradient-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn bg-gradient-dark" id="next-edit-btn">Next</button>
            </div>
        </div>
    </div>
</div>
{{/if}}

<script>
    $('#next-product').click(() => {
        $('#next-Modal').modal('show');
    });

    $('#confirm-product').click(() => {
        window.location.href = '/product/handle?do=edit&id=65722770a10dee4d111f272a'
    });
</script>